@model Entities.Models.Requisition

@{

    Layout =   Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card" style="font-family:'Times New Roman'">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Add comment for Reworking Requisition </h4>
                </div>

                <div class="card-body">
                    <form asp-action="ReworkRequisition">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="col-md-7">
                            <label for="exampleFormControlTextarea1">Comment</label>
                            <textarea asp-for="Reason" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Write your comment here ..."></textarea>
                        </div>

                        <div class="form-inline">
                            <div>
                                <input type="submit" name="action" value="Rework" class="btn btn-primary" />
                            </div>
                            <div style="width:100px">

                            </div>
                            <div class="form-group">
                                <input type="submit" name="action" value="Cancel" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

